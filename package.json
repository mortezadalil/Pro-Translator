{
  "name": "pro-translator",
  "productName": "Pro Translator",
  "electronName": "Pro Translator",
  "version": "1.0.0",
  "description": "A macOS menu bar translator app built with Electron",
  "main": "index.js",
  "scripts": {
    "start": "node -e \"process.platform === 'darwin' ? require('child_process').execSync('./mac-launcher.sh', {stdio: 'inherit'}) : require('child_process').execSync('electron . --name=\\\"Pro Translator\\\"', {stdio: 'inherit'})\"",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder -mwl"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "png2icons": "^2.0.1"
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "axios": "^1.6.2",
    "canvas": "^3.1.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.protranslator.app",
    "productName": "Pro Translator",
    "executableName": "Pro Translator",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "extendInfo": "build/mac/Info.plist"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "publish": null
  }
}
